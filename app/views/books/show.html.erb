
 
<div class="container">  
  <div class="row">
      <div class="col-md-3">     
        <%= render 'users/info',user: @user %>
        <%= render 'books/new',book: @new_book %>
      </div>

       <div class="col-md-8 offset-md-1">
            <h1>Book detail</h1>
          <table class="table">
              <tbody>
                  <tr>
                      <td><p><%= link_to attachment_image_tag(@book.user, :profile_image, size: "60x60" , fallback: "no_image.jpg"),user_path(@user)%><br/>
                      <%= link_to @user.name,user_path(@user) %></p></td>
                      <td><%=link_to @book.title,book_path(@book.id) %></td>
                      <td><%= @book.body %></td>
                      
                      
                      <!--#いいね機能実装部分-->
                      <td class="like_buttons_<%= @book.id %>"><%= render 'likes/like',books:@book %></td>


<% if @book.selects_by?(current_user) %>
<!--# 過去にいいねしたかを確認する。-->
    <td><%= link_to book_selects_path(@book.id),method: :delete do %>
      ♥<%= @book.select_a %></td>
      <% end %>
       <td><%= link_to book_selects_path(@book.id),method: :post do %>
      ♡<%= @book.select_b %></td>
       <% end %>
    
    <% else %>
        <td><%= link_to book_selects_path(@book.id),method: :delete do %>
      ♡<%= @book.select_a %></td>
      <% end %>
       <td><%= link_to book_selects_path(@book.id),method: :post do %>
      ♥<%= @book.select_b %></td>
       <% end %>

 <% end %>







                      
                      <td> <%#= link_to @book.select_a,root_path %> </td>
                      <td> <%#= link_to @book.select_b,root_path %> </td>
    
                      <% if @book.user == current_user %>
                      <td><%= link_to "Edit",edit_book_path(@book),class:'btn btn-sm btn-success' %></td>
                      <td>
                      <%= link_to "Destroy", book_path(@book), method: :delete, data: {confirm: "本当に消しますか？"}, class:"btn btn-danger" %>
                       </td>
                       
                       <% end %>
                  </tr>
              </tbody>
          </table>
          
   
          <div class ="comment_area">
        <%= render 'comments/comment', book: @book, comment: @comment, comments: @comments %>
        </div>


         </div>
         </div>
  </div>
</div>






